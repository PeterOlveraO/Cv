---
// Importamos el layout
import CVLayout from '../layouts/CVLayout.astro';

// Importamos los componentes
import Header from '../components/Header.astro';
import Educacion from '../components/Educacion.astro';
import Experiencia from '../components/Experiencia.astro';
import Habilidades from '../components/Habilidades.astro';

// Importamos los datos
import { 
  personalData, 
  formacionAcademica, 
  experienciaProfesional, 
  habilidades
} from '../data/cvData.js';
---

<CVLayout title={`${personalData.nombre} - Curriculum Vitae`}>
  <Header data={personalData} />
  <Educacion data={formacionAcademica} />
  <Experiencia data={experienciaProfesional} />
  <Habilidades data={habilidades} />
</CVLayout>
